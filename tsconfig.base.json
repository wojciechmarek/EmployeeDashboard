{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@md/api/controllers": ["libs/api/controllers/src/index.ts"],
      "@md/api/resolvers": ["libs/api/resolvers/src/index.ts"],
      "@md/common/models": ["libs/common/models/src/index.ts"],
      "@md/web/assets": ["libs/web/assets/src/index.ts"],
      "@md/web/components/atoms": ["libs/web/components/atoms/src/index.ts"],
      "@md/web/components/molecules": [
        "libs/web/components/molecules/src/index.ts"
      ],
      "@md/web/components/organisms": [
        "libs/web/components/organisms/src/index.ts"
      ],
      "@md/web/utilities/constants": [
        "libs/web/utilities/constants/src/index.ts"
      ],
      "@md/web/views/auth": ["libs/web/views/auth/src/index.ts"],
      "@md/web/views/dashboard": ["libs/web/views/dashboard/src/index.ts"],
      "@md/web/views/drive": ["libs/web/views/drive/src/index.ts"],
      "@md/web/views/layout": ["libs/web/views/layout/src/index.ts"],
      "@md/web/views/user-profile": ["libs/web/views/user-profile/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
